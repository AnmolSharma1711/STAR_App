# Example .env file for Android Backend
# Copy this to .env and fill in your values

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-android-backend-domain.com,localhost,127.0.0.1

# Database Connection (SHARED WITH WEBSITE BACKEND)
# Use the SAME DATABASE_URL as your website backend
DATABASE_URL=postgresql://username:password@host:port/database_name

# OR for local development with SQLite
USE_SQLITE=False

# OR for local PostgreSQL
DB_NAME=tars_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Cloudinary (same as website backend - shared media storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# CORS Settings
CSRF_TRUSTED_ORIGINS=https://your-android-backend-domain.com,http://localhost
ANDROID_BACKEND_URL=https://your-android-backend-domain.com

# Render Deployment (if using Render)
RENDER_EXTERNAL_HOSTNAME=your-app-name.onrender.com
